# Database Configuration (Required for Railway)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
PGHOST=your_db_host
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name

# Authentication Secrets (Required - Generate strong random strings)
JWT_SECRET=replace_with_random_64_character_key_for_jwt_tokens
SESSION_SECRET=replace_with_random_64_character_session_secret

# Admin API (Optional)
ADMIN_API_KEY=your_admin_api_key_sha256_hash
APPKEY_CORE_SEED=CORE_DEV_KEY_123

# Email Service (Optional - for password reset)
SENDGRID_API_KEY=replace_with_sendgrid_api_key

# Application Settings
NODE_ENV=production
PORT=5000
